@using StationeryManagerLib.Entities

@{
	@model AccountModel
	ViewData["Title"] = "Chi tiết tài khoản";
}

@*
	hiển thị chi tiết tài khoản
*@

<h1>@ViewData["Title"]: @Model.Name</h1>
<div class="mt-3 d-flex gap-1">
    <a asp-action="Index" class="btn btn-secondary">Danh sách tài khoản</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Cập nhật tài khoản</a>
</div>


<div class="card mt-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Tên tài khoản</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@((Model.IsActive) ? "Hoạt động" : "Không hoạt động")</dd>
        </dl>
    </div>
</div>


