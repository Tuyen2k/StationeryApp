@using StationeryManagerLib.Entities

@{
    // @model ProductModel
	ViewData["Title"] = "Chi tiết sản phẩm";
}

@*
	hiển thị chi tiết tài khoản
*@

<h1>@ViewData["Title"]: @Model.Name</h1>
<div class="mt-3 d-flex gap-1">
    <a asp-action="Index" class="btn btn-secondary">Danh sách sản phẩm</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Cập nhật danh mục</a>
</div>


<div class="card mt-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9" id="Id">@Model.Id</dd>

            <dt class="col-sm-3">Tên tài khoản</dt>
			<dd class="col-sm-9" id="Name">@Model.Name</dd>

            <dt class="col-sm-3">Mô tả</dt>
			<dd class="col-sm-9" id="Description">@Model.Description</dd>

			<dt class="col-sm-3">Mã SKU</dt>
			<dd class="col-sm-9" id="Sku">@Model.Sku</dd>

			<dt class="col-sm-3">Giá nhập</dt>
			<dd class="col-sm-9" id="Price">@Model.Price.ToString("N0")</dd>

			<dt class="col-sm-3">Giá bán</dt>
			<dd class="col-sm-9" id="PriceSale">@Model.PriceSale.ToString("N0")</dd>

			<dt class="col-sm-3">Lịch sử thao tác</dt>
			<dd class="col-sm-9"></dd>

			<dt class="col-sm-3">Người tạo</dt>
			<dd class="col-sm-9" id="Created">@Model.CreatedByAccountEmail - @Model.CreatedAt.ToString("HH:mm dd/MM/yyyy")</dd>
			<dt class="col-sm-3">Người sửa cuối</dt>
			<dd class="col-sm-9" id="">@Model.UpdatedByAccountEmail - @Model.UpdatedAt.ToString("HH:mm dd/MM/yyyy")</dd>
			<dt class="col-sm-3">Ảnh</dt>
			<dd class="col-sm-9">
				@if (!string.IsNullOrEmpty(Model.ImageUrl))
				{
					<img src="@Model.ImageUrl" alt="product image" style="width: 100px; height: auto" />
				}
				@if (string.IsNullOrEmpty(Model.ImageUrl))
				{
					<img src="../images/image_default.png" alt="default image" style="width: 100px; height: auto" />
				}
			</dd>

        </dl>
    </div>
</div>


