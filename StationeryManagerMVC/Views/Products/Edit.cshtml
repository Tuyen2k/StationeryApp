@using StationeryManagerLib.RequestModel

@{
	@model ProductRequest
	ViewData["Title"] = "Cập nhật sản phẩm";
}

<h1>@ViewData["Title"]</h1>
<a asp-action="Index" class="btn btn-secondary">Danh sách sản phẩm</a>
<div class="container">
	<form method="post" asp-action="Edit">
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="SubCategoryId" class="control-label"></label>
			<select asp-for="SubCategoryId" asp-items="ViewBag.SubCategoryList" class="form-control">
				<option value="">-- Chọn danh mục cha --</option>
			</select>
			<span asp-validation-for="SubCategoryId" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Sku"></label>
			<input asp-for="Sku" class="form-control" />
			<span asp-validation-for="Sku" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Price"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PriceSale"></label>
			<input asp-for="PriceSale" class="form-control" />
			<span asp-validation-for="PriceSale" class="text-danger"></span>
		</div>

		@* <div class="form-group">
			<label asp-for="ImageUrl"></label>
			<input asp-for="ImageUrl" class="form-control" />
			<span asp-validation-for="ImageUrl" class="text-danger"></span>
		</div> *@

		<div class="form-group">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		@* nút submit *@
		<div class="form-group">
			<input type="submit" value="Cập nhật" class="btn btn-primary" />
		</div>
	</form>
</div>

